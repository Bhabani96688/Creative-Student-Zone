<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.creativetechnocollege.com.crtv.creativetechnocollege.Home">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_color_home">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

<!--            AppBar-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#D9D9D9"
                android:padding="@dimen/_5sdp">
                <LinearLayout
                    android:id="@+id/profile"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hi,"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_8ssp"
                        android:text="Let's start your professional journy"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:gravity="end">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/suggestion"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp">
                        <ImageView

                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_3sdp"
                            android:src="@drawable/suggestion"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/notice"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="@dimen/_10sdp">

                    <ImageView

                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_2sdp"
                        android:src="@drawable/digital" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D6282828"
            android:orientation="vertical">




<!--            Dnb Recyclor view-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/horizontalRecyclerView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:background="#12372A"
                        android:orientation="horizontal"
                        />

            </LinearLayout>

<!--       Dnb count     -->

<!--            Body-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_color_home"
                android:padding="@dimen/_7sdp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <!--                Result-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Result"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/result"
                            android:layout_width="@dimen/_185sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:gravity="center_horizontal"
                            android:paddingTop="@dimen/_10sdp"
                            android:background="@drawable/boarder">

                            <ImageView
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:src="@drawable/results" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Result"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_22ssp"/>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/_15sdp"

                                app:cardBackgroundColor="#A89287BD">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="View"
                                    android:textStyle="bold"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:layout_marginLeft="@dimen/_20sdp"
                                    android:layout_marginRight="@dimen/_20sdp"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_14sdp"/>
                            </androidx.cardview.widget.CardView>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/syllabus"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:padding="@dimen/_3sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@drawable/boarder">

                            <ImageView
                                android:layout_width="@dimen/_75sdp"
                                android:layout_height="@dimen/_45sdp"
                                android:src="@drawable/degree"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Syllabus\n⭐⭐⭐"
                                android:textSize="@dimen/_12ssp"
                                android:textColor="@color/black"/>

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>


                <!--                Library-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Library"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lms"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="@dimen/_130sdp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:background="@drawable/boarder">

                        <ImageView
                            android:layout_width="80.50dp"
                            android:layout_height="83.50dp"
                            android:src="@drawable/library_1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LMS"
                            android:textSize="@dimen/_24ssp"
                            android:layout_gravity="center"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/_5ssp"
                            android:paddingRight="@dimen/_5ssp"
                            android:text="Discover a universe of knowledge in our extraordinary library."
                            android:textAlignment="center"
                            android:textSize="@dimen/_8sdp"
                            tools:ignore="TextSizeCheck" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/attend"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="@dimen/_130sdp"
                        android:gravity="center|top"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingBottom="@dimen/_10sdp"
                            app:cardCornerRadius="@dimen/_15sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">
                                <ImageView
                                    android:layout_width="@dimen/_85sdp"
                                    android:layout_height="@dimen/_90sdp"
                                    android:padding="@dimen/_10sdp"
                                    android:src="@drawable/attendance"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Attendance"
                                    android:textSize="@dimen/_20ssp"
                                    android:textColor="@color/black"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>



                        </LinearLayout>



                    </LinearLayout>


                </LinearLayout>


<!--                Feedback-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feedback"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:gravity="center">
                    <LinearLayout
                        android:id="@+id/feedback"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:orientation="horizontal"
                        android:background="@drawable/boarder">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Feedback"
                                android:textSize="@dimen/_22ssp"
                                android:textColor="@color/black"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Valuable input 😉\nshapes excellence.\n"
                                android:textSize="@dimen/_11sdp"
                                tools:ignore="TextSizeCheck" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="75.50dp"
                                android:layout_height="70.50dp"
                                android:src="@drawable/feedback" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="#DEBE5E"
                                app:cardCornerRadius="@dimen/_15sdp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/_8sdp"
                                    android:layout_marginLeft="@dimen/_8sdp"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:text="Click and Submit Feedback"/>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

<!--                More-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/contacts"
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_140sdp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/boarder">

                        <ImageView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_55sdp"
                            android:src="@drawable/contacts"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Academic \nContacts"
                            android:textAlignment="center"
                            android:textSize="@dimen/_16ssp"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/about"
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_140sdp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/boarder">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About Us"
                            android:textSize="@dimen/_16ssp"
                            android:textColor="@color/black"/>

                        <ImageView
                            android:layout_width="75.50dp"
                            android:layout_height="70.50dp"
                            android:src="@drawable/about"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Our Team and Wings"
                            android:textSize="@dimen/_11ssp"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_16sdp"
                android:background="@drawable/gradient_color_home">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attendance Visualization"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16ssp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_15sdp"
                        app:cardElevation="@dimen/_15sdp">
                        <ImageView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_margin="@dimen/_10sdp"
                            android:src="@drawable/under_construction"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>
<!--                Body End-->


            </LinearLayout>


    </FrameLayout>


</ScrollView>